#include <iostream>
#include <string>
#include <vector>
#include <ctime>
#include <cstdlib>

using namespace std;

void tampilkanMenu();
void login();
void mainkanLudo();
void tampilkanPapan();
void daftarPengguna();
void lemparDadu();
int pemainSaatIni = 0; 

struct Pengguna {
    string namaPengguna;
    string kataSandi;
    int posisi; 
};

vector<Pengguna> pengguna;


int main() {
    srand(time(0)); 
    tampilkanMenu();
    return 0;
}

void tampilkanMenu() {
    int pilihan;
    do {
        cout << "===== Menu Game Ludo =====" << endl;
        cout << "1. Login" << endl;
        cout << "2. Daftar" << endl;
        cout << "3. Mainkan Ludo" << endl;
        cout << "4. Keluar" << endl;
        cout << "Masukkan pilihan Anda: ";
        cin >> pilihan;

switch (pilihan) {
            case 1:
                login();
                break;
            case 2:
                daftarPengguna();
                break;
            case 3:
                mainkanLudo();
                break;
            case 4:
                cout << "Keluar dari permainan. Sampai jumpa!" << endl;
                break;
            default:
                cout << "Pilihan tidak valid. Silakan coba lagi." << endl;
        }
    } while (pilihan != 4);
}

void login() {
    string namaPengguna, kataSandi;
    cout << "Masukkan nama pengguna: ";
    cin >> namaPengguna;
    cout << "Masukkan kata sandi: ";
    cin >> kataSandi;

    for (const auto& user : pengguna) {
        if (user.namaPengguna == namaPengguna && user.kataSandi == kataSandi) {
            cout << "Login berhasil! Selamat datang, " << namaPengguna << "!" << endl;
            return;
        }
    }

    cout << "Login gagal. Nama pengguna atau kata sandi tidak valid." << endl;
}

void daftarPengguna() {
    string namaPengguna, kataSandi;
    cout << "Masukkan nama pengguna baru: ";
    cin >> namaPengguna;
    cout << "Masukkan kata sandi baru: ";
    cin >> kataSandi;
