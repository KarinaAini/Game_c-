const int TARGET_POSISI = 48; 

int lemparDadu() {
    return rand() % 6 + 1; 
}

void animasiTeks(const string& teks) {
    for (char c : teks) {
        cout << c;
        Sleep(200);  
    }
    cout << endl;
}
int main() {
	initscr();
    
	for (int i = 0; i < 3; i++) {
		mvprintw(26, 100, "Loading....");
		mvprintw(27, 100, "--------------------");
		mvprintw(28, 100, "|                  |");
		mvprintw(29, 100, "--------------------");
		
		for (int f = 1; f < 18; f++) {
			mvprintw(28, 100 + f, ">");
			refresh();
			Sleep(500);
		}
	}
	endwin();
